{% extends 'base.html.twig' %}

{% block body %}
    <article class="post">
        <div class="row">
            <div class="col s12 m12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">
                            <a href="/post/{{ post.getId() }}">
                                {{ post.getTitle() }}
                            </a>
                        </span>
                        <p>{{ post.getText() }}</p>
                    </div>
                    <div class="card-action">
                        <span style="float: right">
                            Post√© le {{ post.getDate() }}
                        </span>
                        <span>
                            <a href="/edit/{{ post.getId() }}">Editer</a>
                            <a href="/delete/{{ post.getId() }}">Supprimer</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </article>
{% endblock %}
