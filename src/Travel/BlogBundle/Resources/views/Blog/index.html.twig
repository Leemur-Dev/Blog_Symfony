{% extends 'base.html.twig' %}

{% block body %}

<div class="col s12 m8 l8 ">
  <h2>Mon carnet de voyage</h2>

  {% for post in posts  %}
  <div class="card ">
    <div class="card-content">
      <span class="card-title">
        <a href="/post/{{ post.getId() }}">
          {{ post.getTitle() }}
        </a>
      </span>
      <p>{{ post.getText() }}</p>
    </div>
    <div class="card-action">
      <span style="float: right">
        Post√© le {{ post.getDate() }}
      </span>
      <span>
        <a href="/edit/{{ post.getId() }}">Editer</a>
        <a href="/delete/{{ post.getId() }}">Supprimer</a>
      </span>
    </div>
  </div>
</div>

{% endfor %}
</div>
<a class="btn-floating red" href="/add">
  <i class="material-icons">add</i>
</a>

</div>
</div>
</div>



{% endblock %}
