{% extends 'base.html.twig' %}

{% block body %}
    <form id="save" action="/save" method="post">
        <div class="row">
            <div class="input-field col s12">
                <input type="text" name="title" placeholder="Titre" value="" class="validate">
                <!-- <label for="title">Titre</label> -->
            </div>
        </div>
        <div id="summernote"></div>
        <input type="text" id="text" name="text" value="" hidden>
        <input class="waves-effect waves-light btn green right" type="submit" name="button" value="Enregistrer">
    </form>
    <script type="text/javascript">
        $('#save').submit(function(e) {
            // e.preventDefault();
            $('#text').val($('#summernote').summernote('code'));
        });
    </script>
{% endblock %}
